<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="false">
	<Page.actionBar>
		<ActionBar title="{{ title }}"/>
	</Page.actionBar>

  <ScrollView>
    <ListView items="{{ user.challenges }}">
      <ListView.itemTemplate>
        <GridLayout columns="*, *" rows="*, *" horizontalAlignment="stretch">
          <Label text="{{ title }}" row="0" col="0" colSpan="2" horizontalAlignment="center" cssClass="lname" />
          <Label text="{{user_score, ' Score: ' + user_score  }}" row="1" col="0" colSpan="1" horizontalAlignment="center" cssClass=".pts" />
          <Label text="{{ max_points, ' Max: ' + max_points  }}" row="1" col="1" colSpan="1" horizontalAlignment="center" cssClass=".pts" />
        </GridLayout>
      </ListView.itemTemplate>
    </ListView>
  </ScrollView>
  
</Page>
