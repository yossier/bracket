<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded" actionBarHidden="true">
  <Page.actionBar>
    <ActionBar/>
  </Page.actionBar>
  <ScrollView>
    <StackLayout orientation="vertical">
      <WrapLayout horizontalAlignment="center" >
    	  <Label text="&lt;" cssClass="nums"/>
    	  <Label id="words" text="bracket" />
    	  <Label cssClass="nums" text="&gt;"/>
      </WrapLayout>
      <TextField hint="Email Address" id="email" text="{{ email }}" keyboardType="email"/>
      <TextField hint="First Name" id="first_name" text="{{ first_name }}"/>
      <TextField hint="Last Name" id="last_name" text="{{ last_name }}"/>
      <TextField hint="Password" secure="true" id="password" text="{{ password }}" />
      <activity-indicator busy="{{ authenticating }}" />
      <Button text="Sign Up" id="sign-up-button" tap="register" cssClass="link" />
    </StackLayout>
  </ScrollView>
</Page>
