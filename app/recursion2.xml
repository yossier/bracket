<Page loaded="loaded">
  <ScrollView>
	<StackLayout orientation="vertical">
		<WrapLayout>
      <Label cssClass="description1 indent0" text="/* GOAL: Compute the factorial of num."/>
    </WrapLayout>
    <WrapLayout> 
      <Label cssClass="description2 indent0" text="* Hint: the factorial of 5 is (5*4*3*2*1)"/>
    </WrapLayout>
    <WrapLayout>
      <Label cssClass="description3 indent0" text="*/"/>
    </WrapLayout>
		<!-- Line 1 - Function Declaration -->
		<WrapLayout>
			<Label cssClass="type" text="int " />
			<Label cssClass="functionTitle" text="factorial"/>
			<Label cssClass="plain" text="("/>
			<Label cssClass="type" text="int"/>
			<Label cssClass="plain" text=" num){"/>
		</WrapLayout>
		<!-- Line 2 - temp declaration -->
		<WrapLayout>
			<Label cssClass="type indent1" text="int " />
			<Label class="plain" text="temp"/>
			<Label class="plain" text=";"/>
		</WrapLayout>
		<!-- Line 3 - If statement 1 -->
		<WrapLayout>
			<Label cssClass="statement indent1" text="if "/>
			<Label cssClass="plain" text="("/>
			<Label class="plain" text="num "/>
			<TextField id="ifCondition" cssClass="twoChar" hint="???" text= "{{ ifCondition }}"/>
			<Label cssClass="plain" text=" "/>
			<Label cssClass="number" text="1"/>
			<Label cssClass="plain" text="){"/>
		  </WrapLayout> -->
		<!-- Line 3 - return for base case 1 -->
		<WrapLayout>
			<Label cssClass="statement indent2" text= "return "/>
			<Label cssClass="number" text=" 1"/>
			<Label class="plain" text=";"/>
		</WrapLayout>
		<!-- Line 4 - End Bracket If1 -->
		<WrapLayout>
			<Label cssClass="plain indent1" text="}"/>
		</WrapLayout>
		<!-- Line 5 - recursive statement line-->
		<WrapLayout>
			<TextField id="tempSet" cssClass="fiveChar indent1" hint="????" text="{{ tempSet }}"/>
			<Label cssClass="plain" text=" = num * "/>
			<Label cssClass="functionTitle" text="factorial"/>
			<Label cssClass="plain" text="("/>
			<TextField id="factCall" cssClass="twoChar" hint="???" text="{{ factCall }}"/>
			<Label cssClass="plain" text=" - "/>
			<Label cssClass="number" text="1"/>
			<Label cssClass="plain" text=");"/>
		</WrapLayout>
		<!-- Line 6 - Return for fib -->
		<WrapLayout>
			<Label cssClass="statement indent1" text= "return "/>
			<Label cssClass="plain" text="temp;"/>
		</WrapLayout>
		<!-- Line 7 - End Bracket Function -->
		<WrapLayout>
			<Label cssClass="plain" text="}"/>
		</WrapLayout>
		
		<Button text="Print!" tap="print"/>
	</StackLayout>
  </ScrollView>
</Page>
