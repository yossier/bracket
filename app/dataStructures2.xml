<Page loaded="loaded">
	<StackLayout orientation="vertical">
		<WrapLayout>
            <Label cssClass="description1 indent0" text="/* GOAL: Implement the Person class."/>
        </WrapLayout>
        <WrapLayout> 
            <Label cssClass="description2 indent0" text="* name is a private member variable."/>
        </WrapLayout>
        <WrapLayout>
            <Label cssClass="description3 indent0" text="*/"/>
        </WrapLayout>
		<!-- Line 1 - Function Declaration -->
		<WrapLayout>
			<Label cssClass= "type" text="class " />
			<Label cssClass= "plain" text="Person{"/>
		</WrapLayout>
		<WrapLayout>
			<Label cssClass="statement" text="public:"/>
		</WrapLayout>
		<WrapLayout>
			<TextField id="constr" cssClass="fiveChar indent1" hint="?????" text="{{ constr }}"/>
			<Label cssClass="plain" text="(){"/>
		</WrapLayout>
		<WrapLayout>
			<Label cssClass="plain indent2" text="name = "/>
			<Label cssClass="str" text='"Jane Doe"'/>
			<Label cssClass="plain" text=";"/>		
		</WrapLayout>
		<WrapLayout>
			<Label class="plain indent1" text="}"/>
		</WrapLayout>
		<WrapLayout>
			<Label cssClass="functionTitle indent1" text="Person"/>
			<Label cssClass="plain" text="("/>
			<TextField id="type1" cssClass="fiveChar" hint="?????" text="{{ type1 }}"/>
			<Label cssClass="plain" text=" name_in){"/>
		</WrapLayout>
		<WrapLayout>
			<Label class="plain indent3" text="name = name_in;"/>
		</WrapLayout>
		<WrapLayout>
			<Label class="plain indent1" text="}"/>
		</WrapLayout>
		<WrapLayout>
			<TextField id="type2" cssClass="fiveChar indent1" hint="?????" text="{{ type2 }}"/>
			<Label class="plain" text=" getName(){"/>
		</WrapLayout>
		<WrapLayout>
			<Label cssClass="statement indent2" text="return"/>
			<TextField id="rname" cssClass="fiveChar" hint="?????" text="{{ rname }}"/>
			<Label class="plain" text=";"/>
		</WrapLayout>
		<WrapLayout>
			<Label class="plain indent1" text="}"/>
		</WrapLayout>
		<WrapLayout>
			<TextField id="type3" cssClass="fiveChar indent1" hint="?????" text="{{ type3 }}"/>
			<Label cssClass="plain" text=" setName(string name_in){"/>
		</WrapLayout>
		<WrapLayout>
			<TextField id="nl" cssClass="fiveChar indent2" hint="?????" text="{{ nl }}"/>
			<Label class="plain" text=" &#61; "/>
			<TextField id="nr" cssClass="big" hint="?????" text="{{ nr }}"/>
			<Label class="plain" text=";"/>
		</WrapLayout>
		<WrapLayout>
			<Label class="plain indent1" text="}"/>
		</WrapLayout>
		<WrapLayout>
			<TextField id="priv" cssClass="big" hint="?????" text="{{ priv }}"/>
			<Label class="statement" text=":"/>
		</WrapLayout>
		<WrapLayout>
			<Label cssClass="plain indent1" text="string name = "/>
			<Label cssClass="str" text='""'/>
			<Label class="plain" text=";"/>
		</WrapLayout>
		<WrapLayout>
			<Label class="plain" text="};"/>
		</WrapLayout>
		<Button text="Print!" tap="print"/>
	</StackLayout>
</Page>