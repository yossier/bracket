<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
  <TabView id="homeTabView">
    <TabView.items>
      <TabViewItem title="Home">
        <TabViewItem.view>
		      <StackLayout orientation ="vertical" verticalAlignment="stretch">
					  <Label id="navHeader" text="&#60; Choose A Challenge &#62;" horizontalAlignment="stretch" cssId="banner"/>
            
            <ScrollView>
              <StackLayout orientation ="vertical" verticalAlignment="stretch">
                <DockLayout stretchLastChild="false">
	    			      <Label tap="recursion" dock="left" cssClass="boxHeader" verticalAlignment="center" text="Recursion"/>
	    			      <Button text="&#62;" dock="right" cssClass="collapseButton" verticalAlignment="center" tap="recursion"/>
                </DockLayout>
                
                <Label horizontalAlignment="stretch" cssClass="spacer"/>
                
                <DockLayout stretchLastChild="false" >
	    			      <Label tap="dataStructures" dock="left" cssClass="boxHeader" verticalAlignment="center" text="Data Structures"/>
	    			      <Button text="&#62;" dock="right" cssClass="collapseButton" verticalAlignment="center" tap="dataStructures"/>
                </DockLayout>
                
                <Label horizontalAlignment="stretch" cssClass="spacer"/>
                
                <DockLayout stretchLastChild="false">
	    			      <Label tap="algorithms" dock="left" cssClass="boxHeader" verticalAlignment="center" text="Algorithms"/>
	    			      <Button text="&#62;" dock="right" cssClass="collapseButton" verticalAlignment="center" tap="algorithms"/>
                </DockLayout>
                
                <Label horizontalAlignment="stretch" cssClass="spacer"/>

                <DockLayout stretchLastChild="false">
	    			      <Label tap="loops" dock="left" cssClass="boxHeader" verticalAlignment="center" text="Loops"/>
	    			      <Button text="&#62;" dock="right" cssClass="collapseButton" verticalAlignment="center" tap="loops"/>
                </DockLayout>
                
                <Label horizontalAlignment="stretch" cssClass="spacer"/>
                
                <DockLayout stretchLastChild="false">
	    	          <Label tap="sorts" dock="left" cssClass="boxHeader" verticalAlignment="center" text="Sorts"/>
	    			      <Button text="&#62;" dock="right" cssClass="collapseButton" verticalAlignment="center" tap="sorts"/>
			          </DockLayout>
                
                <Label horizontalAlignment="stretch" cssClass="spacer"/>

                <DockLayout stretchLastChild="false">
	    	          <Label tap="sorts" dock="left" cssClass="boxHeader" verticalAlignment="center" text="Scalability"/>
	    			      <Button text="&#62;" dock="right" cssClass="collapseButton" verticalAlignment="center" tap="sorts"/>
			          </DockLayout>

                <Label horizontalAlignment="stretch" cssClass="spacer"/>

                <DockLayout stretchLastChild="false">
	    	          <Label tap="sorts" dock="left" cssClass="boxHeader" verticalAlignment="center" text="Selection"/>
	    			      <Button text="&#62;" dock="right" cssClass="collapseButton" verticalAlignment="center" tap="sorts"/>
			          </DockLayout>
                
                
              </StackLayout>
            </ScrollView>
			      <!-- <Button text="Sign in" cssClass="link" tap="signIn" /> -->
		      </StackLayout>
          
        </TabViewItem.view>
      </TabViewItem>
      
      <TabViewItem title="Leaderboard">
        <TabViewItem.view>
	        <StackLayout orientation="vertical">
			      <Label horizontalAlignment="stretch" id="navHeader" text="&#60; Leaderboard &#62;"/>
	    	    <GridLayout columns="*, *" rows="*, *" verticalAlignment="left" horizontalAlignment="stretch">
	    		    <Border cssClass="elts" row="0" col="0" rowSpan="2" colSpan="2"></Border>
	    			  <Label cssClass="rank" text="&#35;1" row="0" rowSpan="2" col="0"/>
	    			  <Label horizontalAlign="left" id="n1" cssClass="lname" text="{{ n1 }}" row="0" col="1"/>
	    			  <WrapLayout row="1" col="1">
	    				  <Label cssClass="pts" text="Points: "/>
	    				  <Label id="place1" cssClass="pts" text="{{ place1 }}"/>
	    			  </WrapLayout>
			      </GridLayout>
			      <GridLayout columns="*, *" rows="*, *" verticalAlignment="left" horizontalAlignment="stretch">
	    		    <Border cssClass="elts" row="0" col="0" rowSpan="2" colSpan="2"></Border>
	    			  <Label cssClass="rank" text="&#35;2" row="0" rowSpan="2" col="0"/>
	    			  <Label horizontalAlign="left" id="n2" cssClass="lname" text="{{ n2 }}" row="0" col="1"/>
	    			  <WrapLayout row="1" col="1">
	    				  <Label cssClass="pts" text="Points: "/>
	    				  <Label id="place2" cssClass="pts" text="{{ place2 }}"/>
	    			  </WrapLayout>
			      </GridLayout>
			      <GridLayout columns="*, *" rows="*, *" verticalAlignment="left" horizontalAlignment="stretch">
	    		    <Border cssClass="elts" row="0" col="0" rowSpan="2" colSpan="2"></Border>
	    			  <Label cssClass="rank" text="&#35;3" row="0" rowSpan="2" col="0"/>
	    			  <Label horizontalAlign="left" id="n3" cssClass="lname" text="{{ n3 }}" row="0" col="1"/>
	    			  <WrapLayout row="1" col="1">
	    				  <Label cssClass="pts" text="Points: "/>
	    				  <Label id="place3" cssClass="pts" text="{{ place3 }}"/>
	    			  </WrapLayout>
			      </GridLayout>
			      <GridLayout columns="*, *" rows="*, *" verticalAlignment="left" horizontalAlignment="stretch">
	    		    <Border cssClass="elts" row="0" col="0" rowSpan="2" colSpan="2"></Border>
	    			  <Label cssClass="rank" text="&#35;4" row="0" rowSpan="2" col="0"/>
	    			  <Label horizontalAlign="left" id="n4" cssClass="lname" text="{{ n4 }}" row="0" col="1"/>
	    			  <WrapLayout row="1" col="1">
	    				  <Label cssClass="pts" text="Points: "/>
	    				  <Label id="place4" cssClass="pts" text="{{ place4 }}"/>
	    			  </WrapLayout>
			      </GridLayout>
			      <GridLayout columns="*, *" rows="*, *" verticalAlignment="left" horizontalAlignment="stretch">
	    		   <Border cssClass="elts" row="0" col="0" rowSpan="2" colSpan="2"></Border>
	    			 <Label cssClass="rank" text="&#35;5" row="0" rowSpan="2" col="0"/>
	    			 <Label horizontalAlign="left" id="n5" cssClass="lname" text="{{ n5 }}" row="0" col="1"/>
	    			 <WrapLayout row="1" col="1">
	    				 <Label cssClass="pts" text="Points: "/>
	    				 <Label id="place5" cssClass="pts" text="{{ place5 }}"/>
	    			 </WrapLayout>
			      </GridLayout>
	        </StackLayout>
        </TabViewItem.view>
      </TabViewItem>
      
      <TabViewItem title="Profile">
        <TabViewItem.view>
          <StackLayout verticalAlignment="center" horizontalAlignment="center" orientation="vertical">
            <Label id="navHeader" text="&#60; Profile &#62;" horizontalAlignment="stretch" cssId="banner"/>
		        <!-- <Image src="~/Downloads/download.jpeg" stretch ="none" / >  -->
		        <Label id="nameVal" text="{{ nameVal }}"/>
		        <Label id="emailAddr" text="{{ emailAddr }}"/>
		        <Label cssClass="points" text="Points:"/>
		        <Label cssClass="points" id="pointNum" text="{{ numPoints }}"/>
		        <WrapLayout>
			        <Label cssClass="challenges" text="Challenges Attempted: "/>
			        <Label id="attemptedBox" cssClass="challenges" text="{{ attempted }}"/>
		        </WrapLayout>
		        <WrapLayout>
			        <Label cssClass="challenges" text="Challenges Completed: "/>
			        <Label id="completedBox" cssClass="challenges" text="{{ completed }}"/>
		        </WrapLayout>
	        </StackLayout>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
 </TabView>
</Page>
